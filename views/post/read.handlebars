<div class="px-3 mb-6 lg:mb-1 xl:w-1 lg:flex-none">
  <a href="/post">
    <button
      class="w-96 px-6 py-3 mt-6 mb-2 font-bold text-white uppercase transition-all bg-transparent border-0 rounded-lg cursor-pointer active:opacity-85 hover:scale-102 hover:shadow-soft-xs leading-pro text-xs ease-soft-in tracking-tight-soft shadow-soft-md bg-150 bg-x-25 bg-gradient-to-tl from-gray-900 to-pink-800 hover:border-pink-700 hover:bg-pink-700 hover:text-white"
    >
      Go Back
    </button>
  </a>

  {{#if owner}}
    <div
      class="relative flex flex-col min-w-0 break-words bg-white shadow-soft-xl rounded-2xl bg-clip-border"
    >
      <div class="flex-auto p-4">
        <div class="flex flex-wrap -mx-3">
          <div class="max-w-full px-3 lg:flex-none">
            <div class="grid grid-rows-1 grid-flow-col gap-4">
              <p class="pt-2 mb-1 font-semibold">Author:
                {{post.author.name}}
              </p>
              <form action="/post/{{post._id}}/update" method="post">
                <label style="font-weight:bold">Post title</label>
                <input
                  name="title"
                  style="border:solid 1px black;"
                  class="w-full px-3 lg:flex-none rounded-lg"
                  value="{{post.title}}"
                />
                <hr />
                <label style="font-weight:bold">Post Content</label>
                <textarea
                  name="content"
                  rows="15"
                  style="border:solid 1px black;"
                  class="w-full px-3 lg:flex-none rounded-lg"
                  cols="100"
                >{{post.content}}</textarea>
                <div class="flex flex-wrap align-center">
                  <a
                    href="/post/{{post._id}}/delete"
                    class="w-96 px-6 py-3 mt-6 mb-2 font-bold text-white uppercase transition-all bg-transparent border-0 rounded-lg cursor-pointer active:opacity-85 hover:scale-102 hover:shadow-soft-xs leading-pro text-xs ease-soft-in tracking-tight-soft shadow-soft-md bg-150 bg-x-25 bg-gradient-to-tl from-gray-900 to-pink-800 hover:border-pink-700 hover:bg-pink-700 hover:text-white"
                  >
                    Remove
                  </a>
                  <a href="/post/create" class="px-2">
                    <button
                      class="inline-block w-full px-6 py-3 mt-6 mb-0 font-bold text-center text-white uppercase align-middle transition-all bg-transparent border-0 rounded-lg cursor-pointer shadow-soft-md bg-x-25 bg-150 leading-pro text-xs ease-soft-in tracking-tight-soft bg-gradient-to-tl from-blue-600 to-cyan-400 hover:scale-102 hover:shadow-soft-xs active:opacity-85"
                    >
                      Update
                    </button>
                  </a>
                </div>
              </form>
              <div class="min-h-6 mb-0.5 block pl-12">
                <label
                  class="mb-2 ml-1 font-normal cursor-pointer select-none text-sm text-slate-700"
                >
                  {{errorMsg}}
                </label>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  {{else}}
    <div
      class="relative flex flex-col min-w-0 break-words bg-white shadow-soft-xl rounded-2xl bg-clip-border"
    >
      <div class="flex-auto p-4">
        <div class="flex flex-wrap -mx-3">
          <div class="max-w-full px-3 lg:w-1 lg:flex-none">
            <div class="flex flex-col h-full">
              <p class="pt-2 mb-1 font-semibold">Author:
                {{post.author.name}}</p>
              <h5 class="font-bold">{{post.title}}</h5>
              <p class="mb-12">{{post.content}}</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  {{/if}}
</div>